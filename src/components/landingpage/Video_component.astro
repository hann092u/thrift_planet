---
const { title, image2 } = Astro.props;
import Button from "../Button.astro";
---

<div class="container">
  <h2>{title}</h2>
  <div class="layout">
    <video autoplay muted loop src="/img/general/thrift_planet_video.mp4"></video>
  </div>
  <div class="vis">
    <Button title="LÃ†S MERE" />
  </div>
</div>
<img class="sky_down" src={image2} alt="" />

<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--bg);
    margin-top: -20px;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 0.5fr;
    overflow: hidden;
  }
  h2 {
    align-self: center;
    color: white;
    margin-bottom: 2rem;
  }
  .layout {
    overflow: hidden;
    grid-column: 1;
    grid-row: 1/2;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    
  }

  .vis {
    z-index: 5;
    grid-column: 1;
    grid-row: 2;
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
  .sky_down {
    width: 100%;
    margin-top: -12px;
  }

  video{
    width: 100%;
    height: 100%;
  }

  @media (min-width: 800px) {
    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: var(--bg);
      margin-top: -60px;
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 0.5fr;
    }

    .sky_down {
      width: 116%;
      margin-inline: -1rem;
      margin-top: -55px;
      transform: translateX(-5%);
    }

    .layout {
      overflow: hidden;
      grid-column: 1;
      grid-row: 1/3;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
    }

    .vis {
      z-index: 5;
      grid-column: 1;
      grid-row: 2;
      display: flex;
      flex-direction: row;
      justify-content: center;
    }
    video{
    width: 200%;
    height: 200%;
  }
  }
</style>
