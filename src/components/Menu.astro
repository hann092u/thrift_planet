    </li>
  </ul>
</nav>

<script src="../scripts/menu.js"></script>

<style>
  .grid_1-1 {
    display: grid;
    grid-template-columns: auto 1fr;
  }
  .kune_logo {
    float: rigtht;
    width: 50px;
    margin: 20px;
  }

  ul {
    list-style: none;
  }
  ul li {
    font-family: "Alata";
    font-size: 2rem;
    margin-right: 20px;
  }

  li a {
    color: white;
    text-decoration: none;
  }
  #menu {
    float: left;
  }
  #menu ul {
    display: flex;
    align-items: center;
    gap: 20px 40px;
    margin: 20px;
  }

  #menu a:hover {
    color: white;
  }

  img:hover {
    filter: brightness(100);
  }

  #burger-menu {
    text-indent: -9999px;
    display: none;
    border: none;
    background: transparent;
    margin: 25px;
    cursor: pointer;
    height: 27px;
    width: 27px;
    position: relative;
    z-index: 2;
  }

  @media screen and (max-width: 900px) {
    .logo-drop {
      display: none;
    }
    #burger-menu {
      display: block;
    }
    #burger-menu span,
    #burger-menu span:before,
    #burger-menu span:after {
      background: rgba(253, 132, 32, 1);
      display: block;
      height: 3px;
      opacity: 1;
      position: absolute;
      transition: 0.3s ease-in-out;
      content: "";
    }
    #burger-menu span:before {
      left: 0px;
      top: -10px;
      width: 27px;
    }
    #burger-menu span {
      right: 0px;
      top: 13px;
      width: 27px;
    }
    #burger-menu span:after {
      left: 0px;
      top: 10px;
      width: 27px;
    }
    #burger-menu.close span:before {
      top: 0px;
      transform: rotate(90deg);
      width: 27px;
      background: rgba(253, 132, 32, 1);
    }
    #burger-menu.close span {
      transform: rotate(-45deg);
      top: 13px;
      width: 27px;
      background: rgba(253, 132, 32, 1);
    }
    #burger-menu.close span:after {
      top: 0px;
      left: 0;
      transform: rotate(90deg);
      opacity: 0;
      width: 0;
      background: rgba(253, 132, 32, 1);
    }
    #menu {
      z-index: 1;
      min-width: 100%;
      min-height: 100%;
      position: fixed;
      top: 0;
      height: 0;
      visibility: hidden;
      opacity: 0;
      text-align: center;
      padding-top: 20px;
      transition: all 0.3s ease-in-out;
    }
    #menu.overlay {
      visibility: visible;
      opacity: 1;
      padding-top: 100px;
      background: rgba(0, 0, 0, 0.8);
    }
    #menu ul {
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px 40px;
      margin: 20px;
    }
    #menu li {
      list-style: none;
      display: initial;
    }
    #menu a {
      color: rgba(253, 132, 32, 1);
      display: block;
      font-size: 20px;
      margin-bottom: 30px;
      text-decoration: none;
    }
    .ticket a {
      padding: 15px 25px 15px 25px;
      margin: 10px;
      border-radius: 30px;
    }
  }
</style>
