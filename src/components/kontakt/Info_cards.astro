---
const { title, image, link } = Astro.props;
---

<div class="kontakt1">
  <a href={link}
    ><img src={image} />
    <div class="tekst1">
      <span><h2>{title}</h2></span>
    </div></a
  >
</div>

<style>
  .kontakt1 {
    display: grid;
    grid-template-columns: auto;
    grid-template-rows: auto;
    width: 100%;
  }
  a {
    text-decoration: none;
  }

  h2 {
    text-align: center;
    font-size: 1rem;
  }

  img {
    width: 100%;
  }
  .tekst1 {
    color: white;
    transform: translate(0, -470%);
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  @media (min-width: 800px) {
    h2 {
      font-size: 2.2rem;
    }
    .tekst1 {
      transform: translate(0, -310%);
    }
    a:hover img {
      filter: brightness(1.2);
    }
    .kontakt1 {
      max-width: 400px;
    }
  }
</style>
