---
const { image, animation, title, bg } = Astro.props;
import Menu from "../components/Menu.astro";
---

<header>
  <div class="menu"><Menu /></div>
  <div class="baggrund"><slot /></div>

  <div class="container_text">
    <img class="size" src={image} alt="" />
    <h1>{title}</h1>
  </div>
  <div class="container_animation">
    <img class="animation_size" src={animation} alt="" />
  </div>
</header>

<style>
  .baggrund {
    grid-row: 1/5;
    grid-column: 1/4;
  }

  header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto 1fr 2fr 1fr;
    background-color: var(--bg);
  }

  .menu {
    grid-row: 1;
    grid-column: 3;
    z-index: 5;
  }

  .container_text {
    grid-row: 3;
    grid-column: 1/4;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .container_animation {
    grid-row: 2;
    grid-column: 2/3;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .container_text {
    width: 100%;
  }
  .size {
    width: 100%;
  }

  .animation_container {
    width: 100%;
  }

  .animation_size {
    width: 100%;
    animation: cirkelAnimation 10s infinite;
  }

  @keyframes cirkelAnimation {
    0% {
      rotate: 0;
    }

    50% {
      rotate: 180deg;
    }

    100% {
      rotate: 360deg;
    }
  }

  @media (min-width: 800px) {
    .baggrund {
      grid-row: 1/4;
      grid-column: 1/5;
    }

    header {
      display: grid;
      grid-template-columns: 0.5fr 4fr 1.5fr 0.5fr;
      grid-template-rows: 0.2fr 1.5fr 1fr;
      background-color: var(--bg);
    }

    .menu {
      grid-row: 1/2;
      grid-column: 2/4;
      z-index: 5;
    }

    .container_text {
      grid-row: 2/4;
      grid-column: 2/3;
    }
    .container_animation {
      grid-row: 2/3;
      grid-column: 3/4;
    }
    .container_text {
      width: 100%;
      padding-bottom: 20px;
    }
    .size {
      width: 95%;
    }
    .animation_size {
      width: 100%;
      padding: 15px;
    }
  }
</style>

<script src="/animation.js"></script>
