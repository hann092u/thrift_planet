---
const { title, link } = Astro.props;
---

<div class="center">
  <a href={link}><span>{title}</span></a>
</div>

<!-- herfra -->
<div>
  <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
  <lottie-player src="/img/general/arrow.json" background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay></lottie-player>
</div>
<!-- hertil -->

<style>
  a {
    width: 100%;
    border: none;
    background: transparent;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }
  span {
    color: white;
    background-color: var(--brand-color-green);
    border-radius: 30px;
    padding: 12px 40px;
    font-weight: bolder;
    cursor: pointer;
    position: relative;
    font-size: 1.2rem;
    box-sizing: border-box;
    border: 4px solid var(--brand-color-green);
  }

  span:hover {
    border: 4px solid var(--brand-color-purple);
  }
</style>
