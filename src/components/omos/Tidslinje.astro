<div class="grid_1">
  <div class="baggrund"><slot /></div>
  <h2>TIDLINJE FOR BUTIKKEN</h2>
  <div class="tidslinje">
    <img src="/omos/tidslinje2.svg" alt="tidslinje" />
  </div>
</div>

<style>
  .grid_1 {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    align-items: center;
    justify-items: center;
    padding-bottom: 5rem;
  }

  .baggrund {
    grid-column: 1;
    grid-row: 1;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  h2 {
    grid-column: 1;
    grid-row: 1;
    color: white;
  }
  .tidslinje {
    grid-column: 1;
    grid-row: 1;
    width: 80%;
    margin-left: 20px;
    margin-bottom: 3rem;
  }
  @media (min-width: 800px) {
    .tidslinje {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40%;
      padding-bottom: 2rem;
    }

    .grid_1 {
      display: grid;
      grid-template-rows: auto;
      align-items: center;
      justify-items: center;
      padding-bottom: 7rem;
    }
  }
</style>
