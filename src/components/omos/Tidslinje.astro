<div class="grid_1">
  <h2>TIDLINJE FOR BUTIKKEN</h2>
  <div class="baggrund"><slot /></div>
  <div class="tidslinje">
    <img class="center" src="/omos/tidslinje2.svg" alt="tidslinje" />
  </div>
</div>

<style>
  .grid_1 {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
  }

  .tidslinje {
    grid-column: 1;
    grid-row: 1;
    width: 80%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-top: 30px;
    margin-left: 40px;
    padding-bottom: 20px;
    z-index: 1;
  }

  .tidslinje img.center {
    display: block;
    margin: 0 auto; /* Center horizontally */
    max-width: 100%;
    max-height: 100%;
  }

  .baggrund {
    grid-column: 1/2;
    grid-row: 1/2;
    width: 150%;
  }
  h2 {
    grid-column: 1;
    grid-row: 1;
    color: white;
    margin-top: 20px;
    z-index: 1;
  }
  @media (min-width: 800px) {
    .tidslinje {
      grid-column: 1;
      grid-row: 2;
      width: 50%;
      padding-bottom: 20px;
    }

    .grid_1 {
      display: grid;
      grid-template-rows: 0.2fr 1fr;
      grid-column: 1;
      grid-row: 1;
      padding-bottom: 7rem;
    }
    .baggrund {
      width: 100%;
      grid-column: 1;
      grid-row: 1/3;
      overflow: hidden;
      z-index: -1;
    }

    h2 {
      grid-column: 1;
      grid-row: 1;
      color: white;
    }
  }
</style>
