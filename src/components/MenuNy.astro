---
const { title } = Astro.props;
import Button_orange from "./Button_orange.astro";
---

<button id="burger-menu">
  Menu
  <span></span>
</button>

<nav id="menu">
  <ul>
    <li class="logo-drop">
      <li><a href="/omos">OM OS</a></li>
      <li><a href="/kontakt">KONTAKT & FAQ</a></li>
      <li class="logo_li">
        <a class="logo_a" href="/"><img class="logo" src="/img/general/Logo_smiley.svg" alt="logo" /></a>
      </li>
      <li><a href="/webshop">WEBSHOP</a></li>
      <li><a href="/#">KURV</a></li>
    </li>
  </ul>
</nav>

<script src="../scripts/menu.js"></script>

<style>
  a {
    white-space: nowrap;
  }
  img {
    width: 100%;
  }
  ul {
    list-style: none;
  }
  ul li {
    font-family: "Alata";
    font-size: 1.5rem;
  }

  li a {
    color: white;
    text-decoration: none;
    border: 4px solid transparent;
    border-radius: 45px;
    padding: 4px 20px;
    text-align: center;
  }
  #menu {
    padding-right: 2rem;
  }
  #menu ul {
    display: flex;
    align-items: top;
    gap: 20px 40px;
    margin-top: 1rem;
    margin: 20px;
    justify-content: space-between;
  }
  .logo-drop {
    display: none;
  }
  #menu a:hover {
    border: 4px solid var(--brand-color-purple);
    border-radius: 45px;
    padding: 4px 20px;
  }
  #menu .logo_a:hover {
    border: transparent;
    filter: brightness(1.2);
  }

  #menu {
    float: right;
  }
  #menu ul {
    display: flex;
    align-items: center;
    gap: 20px 40px;
    margin: 20px;
  }

  #menu a:hover {
    color: white;
  }

  .logo_li {
    width: 80px;
    padding: 4px;
  }

  #burger-menu {
    text-indent: -9999px;
    display: none;
    border: none;
    background: transparent;
    margin: 25px;
    cursor: pointer;
    height: 27px;
    width: 27px;
    position: relative;
    z-index: 2;
  }

  @media screen and (max-width: 900px) {
    .logo-drop {
      display: none;
    }
    .logo_a {
      position: fixed;
      top: 5px;
      left: 0;
      visibility: visible;
      z-index: 10;
      margin: 1rem;
      padding: 5px;
      text-align: left;
    }
    #burger-menu {
      display: block;
      position: fixed;
      top: 0.5rem;
    }
    #burger-menu span,
    #burger-menu span,
    #burger-menu span:before,
    #burger-menu span:after {
      background: white;
      display: block;
      height: 3px;
      opacity: 1;
      position: absolute;
      transition: 0.3s ease-in-out;
      content: "";
    }
    #burger-menu span:before {
      left: 0px;
      top: -10px;
      width: 27px;
    }
    #burger-menu span {
      right: 0px;
      top: 13px;
      width: 27px;
    }
    #burger-menu span:after {
      left: 0px;
      top: 10px;
      width: 27px;
    }
    #burger-menu.close span:before {
      top: 0px;
      transform: rotate(90deg);
      width: 27px;
      background: white;
    }
    #burger-menu.close span {
      transform: rotate(-45deg);
      top: 13px;
      width: 27px;
      background: white;
    }
    #burger-menu.close span:after {
      top: 0px;
      left: 0;
      transform: rotate(90deg);
      opacity: 0;
      width: 0;
      background: white;
    }
    #menu {
      z-index: 1;
      min-width: 100%;
      min-height: 100%;
      position: fixed;
      top: 0;
      height: 0;
      visibility: hidden;
      opacity: 0;
      text-align: center;
      padding-top: 20px;
      transition: all 0.3s ease-in-out;
    }

    #menu.overlay {
      visibility: visible;
      opacity: 1;
      padding-top: 100px;
      background: var(--bg);
    }
    .logo {
      width: 18%;
    }
    #menu ul {
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px 40px;
      margin: 20px;
    }

    #menu li {
      list-style: none;
      display: initial;
    }
    #menu a {
      color: white;
      display: block;
      font-size: 20px;
      margin-bottom: 30px;
      text-decoration: none;
    }
  }
</style>
