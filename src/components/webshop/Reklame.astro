  }
  h2 {
    color: var(--brand-color-purple);
    margin-top: 1.5rem;
  }
  img {
    border-radius: 15px;
    filter: brightness(1.1);
  }

  .price2 {
    margin-top: 1rem;
  }
  h3 {
    color: var(--brand-color-purple);
    text-align: center;
    margin-top: 4rem;
    margin-bottom: 1rem;
    margin-inline: 1rem;
    font-weight: 400;
  }
  h5 {
    font-size: 1rem;
    margin-top: 1rem;
  }
  .product2 {
    border: 4px solid white;
    padding-inline: 2rem;
    padding-top: 2rem;
    padding-bottom: 1rem;
    margin-bottom: 2rem;
    border-radius: 15px;
    max-width: 320px;
  }
  .product2:hover {
    border: 4px solid var(--brand-color-purple);
  }
  @media (min-width: 800px) {
    img {
      width: 100%;
    }

    .product2 {
      width: 100%;
    }
  }
</style>
