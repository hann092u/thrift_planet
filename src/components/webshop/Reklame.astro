<style>
  .product2 {
    padding-inline: 2rem;
    padding-top: 2rem;
    padding-bottom: 1rem;
    border-radius: 15px;
    width: 60%;
  }
  a {
    text-decoration: none;
  }

  .container2 {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .reklame {
