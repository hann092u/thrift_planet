---
import Button_2 from "../Button_2.astro";
const { title, description, price } = Astro.props;
---

<div class="container">
  <div class="product">
    <img src="/img/blå_hjerte_forside.webp" alt="blå hjerte" />
    <h4>{title}</h4>
    <h5>{description}</h5>
    <h5 class="price">{price}</h5>
  </div>
  <div class="button">
    <Button_2 title="LÆG I KURV" />
  </div>
</div>

<style>
  .button {
    margin-block: 40px;
  }
  .product {
    border: 4px solid white;
    padding-inline: 2rem;
    padding-top: 2rem;
    padding-bottom: 1rem;
    border-radius: 15px;
  }
  .container {
    margin-inline: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  img {
    border-radius: 15px;
    filter: brightness(1.1);
  }
  .price {
    margin-top: 1rem;
  }
  .product:hover {
    border: 4px solid var(--brand-color-purple);
  }
</style>
