---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Info_card from "../components/kontakt/Info_card.astro";
import Adresse from "../components/kontakt/Adresse.astro";
import Question from "../components/kontakt/Question.astro";
---

<MainLayout title="KONTAKT">
  <Header title="KONTAKT" animation="/img/general/animation.svg">
    <img class="desktop" src="/img/general/kontakt_desk_copy.webp" alt="baggrund" />
    <img class="mobil" src="/img/general/kontakt_copy.webp" alt="baggrund" />
  </Header>
  <main>
    <Adresse title="BESÃ˜G OS NEDE I BUTIKKEN" image2="/img/general/bannerdown.svg" />
    <Info_card />
    <Question>
      <img class="blur" src="/img/general/gradient_background.svg" alt="background" />
    </Question>
  </main>
  <div class="footer">
    <Footer image3="/img/general/bannerup.svg" />
  </div>
</MainLayout>

<style>
  .desktop {
    display: none;
  }

  .mobil {
    display: block;
  }
  .blur {
    filter: blur(5px);
  }
  p {
    font-size: 51pt;
    color: white;
  }
  .footer {
    margin-top: -5rem;
  }
  .desktop {
    display: none;
  }

  .mobil {
    display: block;
  }

  @media (min-width: 800px) {
    .desktop {
      display: block;
    }
    .mobil {
      display: none;
    }
    .footer {
      margin-top: -18rem;
    }
  }
</style>
