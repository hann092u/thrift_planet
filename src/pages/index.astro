---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Drop_component from "../components/landingpage/Drop_component.astro";
import Header from "../components/Header.astro";
import Video_component from "../components/landingpage/Video_component.astro";
---

<MainLayout title="Thrift planet">
  <Header image="/header/purple_header_banner.png" animation="/img/general/animation.svg">
    <img class="desktop" src="/img/general/bg_gradientcloud.svg" alt="" />
    <img class="mobil" src="/img/general/bg_mobil.png" alt="" />
  </Header>
  <main>
    <Video_component image2="/img/general/bannerdown.svg" />
    <Drop_component title="NYESTE DROP I SHOPPEN" />
    <Button title="LÆS MERE" link="/webshop" />
    <a href="/omos">Gå til om os</a>
    <a href="/kontakt">Gå til kontakt</a>
  </main>
</MainLayout>

<style>
  .desktop {
    display: none;
  }

  .mobil {
    display: block;
  }

  @media (min-width: 800px) {
    .desktop {
      display: block;
    }
    .mobil {
      display: none;
    }
  }
</style>
